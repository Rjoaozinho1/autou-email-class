HF_CLASSIFIER_MODEL=facebook/bart-large-mnli
HF_GENERATION_MODEL=google/flan-t5-base

# Which provider to use for generation: hf | groq | nvidia
GENERATION_PROVIDER=hf

# Groq (OpenAI-compatible) — set when GENERATION_PROVIDER=groq
# GROQ_BASE_URL defaults to https://api.groq.com/openai/v1
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# NVIDIA NIM (OpenAI-compatible) — set when GENERATION_PROVIDER=nvidia
# NIM_BASE_URL defaults to https://integrate.api.nvidia.com/v1
# You can set either NIM_API_KEY or NVIDIA_API_KEY
NIM_API_KEY=your_nim_api_key_here
NIM_MODEL=meta/llama-3.1-70b-instruct

# Optional common tuning
GENERATION_TEMPERATURE=0.7
